<% content_for :title, "Listing trucks" %>

<%= link_to 'New Truck', new_admin_truck_path, class: "button primary" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug (link to front-end)</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.name %></td>
        <td><%= link_to truck.slug, truck.link %></td>
        <td><%= truck.description.truncate(30) %></td>
        <td><%= link_to 'Show', [:admin, truck] %></td>
        <td><%= link_to 'Edit', edit_admin_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', [:admin, truck], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

